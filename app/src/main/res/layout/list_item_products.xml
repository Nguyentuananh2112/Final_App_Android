<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_btec"
        android:id="@+id/imgProduct"
        android:contentDescription="Image Product"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iphone 16 Pro max"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toEndOf="@id/imgProduct"
        android:layout_marginStart="20dp"
        android:id="@+id/tvNameProducts"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20.000.000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toEndOf="@id/imgProduct"
        android:layout_marginStart="20dp"
        android:layout_below="@id/tvNameProducts"
        android:layout_marginTop="5dp"
        android:id="@+id/tvPriceProduct"/>

</RelativeLayout>